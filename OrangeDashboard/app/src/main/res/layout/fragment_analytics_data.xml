<?xml version="1.0" encoding="utf-8"?>


<!--Replace ScrollView + LinearLayout to Recycler View once complete to reduce no. of view heirarchy-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_engagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:contentPadding="15dp"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Engagement"
                    android:id="@+id/cardTitle"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="20394"
                    android:id="@+id/engagement_count"
                    android:layout_below="@+id/cardTitle"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="+ 36%"
                    android:id="@+id/engagement_percentage"
                    android:layout_below="@+id/engagement_count"
                    android:layout_centerHorizontal="true"/>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/engagement_percentage"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/ll_mid_stats_2"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:id="@+id/followers_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upvotes"
                        android:id="@+id/textView6"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/ll_mid_stats_2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="20202"
                        android:id="@+id/upvotes_text"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1213"
                        android:id="@+id/textView7"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_viewcounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:contentPadding="15dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Views"
                    android:id="@+id/textView_views"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store"
                        android:id="@+id/store_views_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/store_views_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupon"
                        android:id="@+id/coupon_views_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/coupon_views_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post"
                        android:id="@+id/post_views_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/post_views_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:id="@+id/gallery_views_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/gallery_views_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product"
                        android:id="@+id/product_views_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/product_views_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_other_analytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="15dp"
            card_view:cardElevation="5dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:id="@+id/reviews_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/reviews_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <include
                    layout="@layout/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/divider"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                </include>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collections Added"
                        android:id="@+id/collections_added_text"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:id="@+id/collections_added_count"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>